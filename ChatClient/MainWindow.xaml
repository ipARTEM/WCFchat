<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="23" Margin="111,15,0,0" TextWrapping="Wrap" Text="Имя пользователя" VerticalAlignment="Top" Width="671"/>
        <Button  x:Name="bConnDicon" Content="Connect" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="Button_Click"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="264" Margin="10,43,0,0" VerticalAlignment="Top" Width="772" />
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="97" Margin="10,312,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="772" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
